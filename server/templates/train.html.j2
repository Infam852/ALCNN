{% extends "base.html" %}

{% block title %}
    Train
{% endblock title %}

{% block header %}
    <h1>Train</h1>
{% endblock header %}

{% block content %}
    <div class="container col-sm-10 mt-3 mb-4 border rounded border-secondary p-3">
        {% if show_results %}
        <div class="m-3">
            <h3 class="text-center pb-2">Training visualization</h3>
            <img class="img-fluid mx-auto d-block" src="{{ url_for('.views_PlotView_search', plot_type='train_acc') }}" alt="Image Placeholder" height="500" class="mx-auto d-block">
        </div>
        <div class="m-3 pt-4">
            <h2>Training history:</h2>
        </div>
        <table class="table text-white">
            <thead>
                <tr>
                    <th scope="col">Epoch</th>
                    <th scope="col">Training accuracy</th>
                    <th scope="col">Training loss</th>
                    <th scope="col">Validation accuracy</th>
                    <th scope="col">Validation loss</th>
                </tr>
            </thead>
                <tbody>
                {% for train_acc, train_loss, val_acc, val_loss in results %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ train_acc|round(3) }}</td>
                    <td>{{ train_loss|round(5) }}</td>
                    <td>{{ val_acc|round(3) }}</td>
                    <td>{{ val_loss|round(5) }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            {% endif %}
            <div class="col-4">
                
            </div>
            <div class="d-flex justify-content-center">
                <div id="loadingSpinner" style="display: none;" class="spinner-border text-success float-right mt-4 mr-2 mb-1" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
                <button type="button" onclick="post_train()" class="btn btn-success btn-lg m-3">Train</button>
                <button type="button" class="btn btn-danger btn-lg m-3" data-toggle="modal" data-target="#exampleModal">
                    Delete training history
                </button>
            </div>
        </div>
    </div>

<!-- Modals -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content text-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Alert</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Do you really want to delete training history?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button"  onclick="delete_train()" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="reloadModal" tabindex="-1" role="dialog" aria-labelledby="reloadLabel" aria-hidden="true">
<div class="modal-dialog" role="document">
    <div class="modal-content text-dark">
    <div class="modal-header">
        <h5 class="modal-title" id="reloadLabel">Alert</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        Training is completed, do you want to reload page?
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button"  onclick="reload()" class="btn btn-primary">Reload</button>
    </div>
    </div>
</div>
</div>

<script>
    function post_train(){
        $("#loadingSpinner").show()
        $.ajax({
            url: '/train',
            type: "POST",
            success: function(){
                check_status();
            },
            error: function(xhr) {
                console.log(xhr.status)
                switch (xhr.status) {
                    case 409:
                        alert("Wait for the server to end action");
                }
            }
        })
    }

    function delete_train(){
        $.ajax({
            url: '/train',
            type: "DELETE",
            success: function(){
                location.reload(); 
            },
            error: function(xhr) {
                console.log(xhr)
            }
            });
        }

    function reload() {
        window.location.href = "/train";
    }

    function check_status(){
        $.ajax({
            url: '/status/train',
            type: "GET",
            success: function(data){
                console.log(data);
                if (data.status == 'success'){
                    console.log('Task finished, reload...');
                    $("#loadingSpinner").hide();
                    $('#reloadModal').modal('show');
                }
                else if (data.status == 'ongoing') {
                    console.log('sleep for 1s')
                    setTimeout(check_status, 1000);
                }
                else {
                    console.log('status failed')
                    alert('Error occured: ' + data.data)
                }
            },
            error: function(){
                $("#loadingSpinner").hide();
            }
        });
    }
</script>
{% endblock content %}