{% extends "base.html" %}

{% block title %}
    Train
{% endblock title %}

{% block header %}
    <h1>Train</h1>
{% endblock header %}

{% block content %}
<div class="container">
    <div class="container col-sm-10 mt-3 mb-4 border rounded border-secondary p-3">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Epoch</th>
                    <th scope="col">Accuracy</th>
                    <th scope="col">Loss</th>
                </tr>
            </thead>
                <tbody>
                {% for acc, loss in results %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ acc }}</td>
                    <td>{{ loss|round(6) }}</td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="d-flex justify-content-center">
            <button type="button" onclick="train()" class="btn btn-success btn-lg m-3">Train</button>
        </div>

    </div>
</div>

<script>
    function train(){
        $.ajax({
            url: '/train',
            type: "POST",
            success: function(){
                console.log('1')
                location.reload(); 
            },
            error: function(xhr) {
                console.log(xhr)
            }
            });
        }
</script>
{% endblock content %}