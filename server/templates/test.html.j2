{% extends "base.html" %}

{% block title %}
    Train
{% endblock title %}

{% block header %}
    <h1>Train</h1>
{% endblock header %}

{% block content %}
<div class="container">
    <div class="container col-sm-10 mt-3 mb-4 border rounded border-secondary p-3">
        {% if show_results %}
        <div class="m-3">
            <h3 class="text-center pb-2">Test visualization</h3>
            <img src="{{ url_for('.views_PlotView_search', plot_type='test') }}" alt="Image Placeholder" height="500" class="mx-auto d-block">
        </div>
        
        <div class="m-3 pt-4">
            <h2>Test history:</h2>
        </div>
        <table class="table text-white">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Accuracy</th>
                    <th scope="col">Number of training images</th>
                </tr>
            </thead>
                <tbody>
                {% for result in results %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ result.acc|round(3) }}</td>
                    <td>{{ result.n_images }}</td>
                    <td></td>
                </tr>
                {% endfor %}
                </tbody>
            </table>
            {% endif %}
            <div class="d-flex justify-content-center">
                <button type="button" onclick="post_test()" class="btn btn-success btn-lg m-3">Test</button>
                <button type="button" class="btn btn-danger btn-lg m-3" data-toggle="modal" data-target="#delete">
                    Delete training history
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="deleteLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content text-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteLabel">Alert</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Do you really want to delete training history?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button"  onclick="delete_test()" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
</div>

<script>
    function post_test(){
        $.ajax({
            url: '/test',
            type: "POST",
            success: function(){
                location.reload(); 
            },
            error: function(xhr) {
                console.log(xhr)
                if (xhr.status == 409){
                    alert("There is ongoing test, please until finishes")
                }
                else {
                    alert("Error occured: " + xhr.status)
                }
            }
            });
        }
    
    function delete_test(){
        $.ajax({
            url: '/test',
            type: "DELETE",
            success: function(){
                location.reload(); 
            },
            error: function(xhr) {
                console.log(xhr)
            }
            });
        }
</script>
{% endblock content %}